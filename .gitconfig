[user]
  email = iam@mattrobertson.ca
  name = Matthew Robertson
[alias]
  lg = log --color --graph --oneline --decorate
  pa = push --force-with-lease
  co = checkout
  cm = commit --verbose
  amend = commit --amend -C HEAD
  pretty = log --pretty=oneline
  clog = diff-tree --no-commit-id --name-only -r 
[core]
  editor=vim
  excludesfile = ~/.gitignore

[color "status"]
  changed = yellow
  added = green
  untracked = cyan
